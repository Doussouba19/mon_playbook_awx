---
- name: Déployer la clé publique SSH pour ansible-admin et automation-admin
  hosts:
    - grafana
    - itop
    - semaphore
  become: yes

  vars:
    ssh_pub_key: "ssh-rsa  awx@tonemail.com"

  tasks:
    - name: Déterminer l'utilisateur distant selon le groupe
      set_fact:
        remote_user: "{{ 'automation-admin' if (inventory_hostname in groups['grafana'] or inventory_hostname in groups['itop']) else 'ansible-admin' }}"

    - name: Créer le dossier .ssh pour l'utilisateur distant
      file:
        path: "/home/{{ remote_user }}/.ssh"
        state: directory
        mode: "0700"
        owner: "{{ remote_user }}"
        group: "{{ remote_user }}"

    - name: Ajouter la clé publique dans authorized_keys
      authorized_key:
        user: "{{ remote_user }}"
        key: "{{ ssh_pub_key }}"
        state: present
        manage_dir: no
